<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/currencies_tv"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@android:drawable/editbox_background"
        android:drawablePadding="12dp"
        android:hint="@string/select_currencies"
        android:padding="12dp"
        android:textColorHint="#757575"
        app:drawableEndCompat="@android:drawable/arrow_down_float"
        app:layout_constraintBottom_toTopOf="@+id/home_guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_guideline5"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/homeTopAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:backgroundTint="@color/Primary_color"
                app:title="@string/home" />

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/contact_us_btn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="#cfecf4"
        android:paddingTop="100dp"
        android:text="@string/contact_us"
        android:textAllCaps="false"
        android:textColor="#4C4B4B"
        app:layout_constraintBottom_toTopOf="@+id/home_guideline4"
        app:layout_constraintEnd_toStartOf="@+id/home_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_guideline2"
        app:strokeColor="#FFFFFF"
        tools:ignore="RtlSymmetry,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/search_btn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="#cfecf4"
        android:paddingTop="100dp"
        android:text="@string/search_for_exchanger"
        android:textAllCaps="false"
        android:textColor="#4C4B4B"
        app:layout_constraintBottom_toTopOf="@+id/home_guideline2"
        app:layout_constraintEnd_toStartOf="@+id/home_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_guideline3"
        app:strokeColor="#FFFFFF"
        tools:ignore="RtlSymmetry,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/calculator_btn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="#cfecf4"
        android:paddingTop="100dp"
        android:text="@string/calculator"
        android:textAllCaps="false"
        android:textColor="#4C4B4B"
        app:layout_constraintBottom_toTopOf="@+id/home_guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/home_guideline1"
        app:layout_constraintTop_toTopOf="@+id/home_guideline2"
        app:strokeColor="#FFFFFF"
        tools:ignore="RtlSymmetry,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/currency_convertor_btn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="#cfecf4"
        android:paddingTop="100dp"
        android:text="@string/currency_rate"
        android:textAllCaps="false"
        android:textColor="#4C4B4B"
        app:layout_constraintBottom_toTopOf="@+id/home_guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/home_guideline1"
        app:layout_constraintTop_toTopOf="@+id/home_guideline3"
        app:strokeColor="#FFFFFF"
        tools:ignore="RtlSymmetry" />



    <ImageView
        android:id="@+id/calculator_logo"
        android:layout_width="125dp"
        android:layout_height="113dp"
        app:layout_constraintBottom_toBottomOf="@+id/calculator_btn"
        app:layout_constraintEnd_toEndOf="@+id/calculator_btn"
        app:layout_constraintStart_toStartOf="@+id/calculator_btn"
        app:layout_constraintTop_toTopOf="@+id/calculator_btn"
        app:layout_constraintVertical_bias="0.405"
        app:srcCompat="@drawable/calculator_logo"
        android:contentDescription="@string/calculator" />

    <ImageView
        android:id="@+id/contact_us_logo"
        android:layout_width="76dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="@+id/contact_us_btn"
        app:layout_constraintEnd_toEndOf="@+id/contact_us_btn"
        app:layout_constraintStart_toStartOf="@+id/contact_us_btn"
        app:layout_constraintTop_toTopOf="@+id/contact_us_btn"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/contact_us_logo"
        android:contentDescription="@string/contact_us" />

    <ImageView
        android:id="@+id/search_logo"
        android:layout_width="140dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_btn"
        app:layout_constraintEnd_toEndOf="@+id/search_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/search_btn"
        app:layout_constraintTop_toTopOf="@+id/search_btn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/search_logo"
        android:contentDescription="@string/search_for_exchanger" />

    <ImageView
        android:id="@+id/currency_logo"
        android:layout_width="99dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="@+id/currency_convertor_btn"
        app:layout_constraintEnd_toEndOf="@+id/currency_convertor_btn"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/currency_convertor_btn"
        app:layout_constraintTop_toTopOf="@+id/currency_convertor_btn"
        app:layout_constraintVertical_bias="0.40"
        app:srcCompat="@drawable/currency_rate_logo"
        android:contentDescription="@string/currency_convertor" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>